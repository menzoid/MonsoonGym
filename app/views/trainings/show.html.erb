<h3>Class Information</h3>

<p>Class: <%= @training.discipline.style %></p>
<p>Trainer: <%= @training.trainer.first_name %></p>
<p>Date: <%= @training.start_time.strftime("%d %b %y")%></p>
<p>Time: <%= @training.start_time.strftime("%H:%M") %></p>


<h4>Attendees (<%= @sessions.count %>):</h4>

<%= link_to "Add Member", new_training_session_path(@training) %>

<% @sessions.each do |session| %>
  <p><%= link_to session.member.first_name, member_path(session.member) %></p>
<% end %>
